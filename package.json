{
  "scripts": {
    "start": "parcel serve --host 0.0.0.0 ./src/**/*.html",
    "build": "yarn build-css && yarn build-js",
    "build-css": "parcel build ./src/index.css --public-url ./ --dist-dir assets/css",
    "build-js": "parcel build ./src/index.js --public-url ./ --dist-dir assets/js",
    "clean": "rm -rf .parcel-cache/ build/ dist/ assets/"
  },
  "name": "blog-theme",
  "version": "0.1.0",
  "description": "My blog theme",
  "author": "Santiago Fraire <santiwilly@gmail.com>",
  "license": "AGPL-3.0",
  "private": false,
  "dependencies": {
    "tailwindcss": "1.9.6"
  },
  "devDependencies": {
    "parcel": "^2.0.0-beta.1"
  }
}
